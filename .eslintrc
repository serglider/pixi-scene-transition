{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-debugger": 0,
    "semi": 0,
    "no-console": 0
  },
  "globals": {
    "PIXI": true,
    "TWEEN": true,
    "TweenMax": true
  }
}